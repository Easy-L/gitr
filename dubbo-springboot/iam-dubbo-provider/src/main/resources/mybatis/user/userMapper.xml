<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
 <mapper namespace="com.zsgr.provider.dao.UserMapper" >
    <resultMap id="BaseResultMap" type="com.zsgr.api.entity.User" >
        <id column="age" property="age"  />
        <result column="username" property="username" />       
    </resultMap>
    <sql id="Base_Column_List" >
        age, username
    </sql>     
    <select id="getAll" resultMap="BaseResultMap"  >
           SELECT        
           <include refid="Base_Column_List" />
           	   FROM test_user    
    </select>     
    <select id="getOne" parameterType="java.lang.Integer" resultMap="BaseResultMap" >
            SELECT       
               <include refid="Base_Column_List" />
              	   FROM test_user   WHERE age = #{age}
     </select>
     <insert id="insert" parameterType="com.zsgr.api.entity.User" >
            INSERT INTO test_user  (age,username) VALUES(#{age},#{username})
     </insert>       
    <update id="update" parameterType="com.zsgr.api.entity.User" >
           UPDATE test_user SET
           <if test="name != null">username = #{username},</if>
           age = #{age}  WHERE age = #{age}
    </update>
    <delete id="delete" parameterType="java.lang.Integer" >
       DELETE FROM test_user  WHERE age =#{age}    
    </delete>
</mapper>